  <section class="home-section">
    <nav>
      <div class="sidebar-button">
        <i class='bx bx-menu sidebarBtn'></i>
        <span class="dashboard">Accounts</span>
      </div>
      <div class="search-box">
        <input type="text" placeholder="Search...">
        <i class='bx bx-search' ></i>
      </div>
      <div class="profile-details">
        <!--<img src="images/profile.jpg" alt="">-->
        <span class="admin_name"><%= user.name %></span>
        <i class='bx bx-chevron-down' ></i>
      </div>
    </nav>
     </section>



    <div class="bookingdetails hidden">
        <h1>Bookings</h1>
        <table>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone Number</th>
              <th>Passenger count</th>
              <th>pickupdate</th>
              <th>dropoffdate</th>
              <th>No of days</th>
              <th>price</th>
            </tr>
            <% for(let i of userbooking) { %>
            <tr>
              <td><%= i.firstname %> <%= i.lastname %></td>
              <td><%= i.email %></td>
              <td><%= i.phoneno %></td>
              <td><%= i.passengercount %></td>
              <td><%= i.pickupdate %></td>
              <td><%= i.dropoffdate %></td>
              <td><%= i.days %></td>
              <td><%= i.price %></td>
            </tr>
            <% } %>
          </table>
        </div>

 <section class="user-details-container" style="background-color: #eee; margin-left: 15rem;">
    <!-- <h1>Accounts Tab</h1> -->
    <div class="container py-5"> 
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <h5 class="my-3"><%= user.name %></h5>
              <p class="text-muted mb-1">User</p>
              <p class="text-muted mb-4">India</p>
              <div class="d-flex justify-content-center mb-2">
                <a href="/home/signout">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">Log out</span>
                  </a>
              </div>
            </div>
          </div>
       
        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.name %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=user.email%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Mobile</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.phoneno %> 9123323423</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Address</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.userpincode %> <%= user.usercity %> <%= user.userstreetaddress %> Sultanpur,UP,India</p>
                </div>
              </div>
            </div>
          </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
